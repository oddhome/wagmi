{
  "name": "root",
  "scripts": {
    "anvil": "anvil --fork-url $ANVIL_FORK_URL --fork-block-number 15578840",
    "build": "preconstruct build",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "dev": "preconstruct dev",
    "docs:build": "pnpm dev && pnpm --filter docs build",
    "docs:dev": "pnpm dev && pnpm --filter docs dev",
    "example:cra": "pnpm build && pnpm --filter example-cra start",
    "example:next": "pnpm build && pnpm --filter example-next dev",
    "example:remix": "pnpm build && pnpm --filter example-remix dev",
    "example:vite-react": "pnpm build && pnpm --filter example-vite-react dev",
    "lint": "eslint . --cache",
    "lint:fix": "pnpm lint --fix",
    "lint:format": "prettier --write",
    "lint:types": "tsc --noEmit",
    "playground": "pnpm dev && pnpm --filter example-dev dev",
    "postinstall": "preconstruct dev",
    "preinstall": "npx only-allow pnpm",
    "prepare": "npx simple-git-hooks",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:update": "vitest --update"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@ethersproject/providers": "^5.7.0",
    "@preconstruct/cli": "^2.1.5",
    "@types/eslint": "^8.4.3",
    "@types/node": "17.0.21",
    "@types/prettier": "^2.6.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitest/ui": "^0.18.1",
    "c8": "^7.12.0",
    "eslint": "8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mdx": "^1.17.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-testing-library": "^5.5.1",
    "ethers": "^5.7.0",
    "jsdom": "^20.0.0",
    "lint-staged": "^12.4.1",
    "msw": "^0.39.2",
    "prettier": "^2.6.2",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.6.4",
    "vite": "^2.9.8",
    "vitest": "^0.18.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "pnpm lint:fix"
    ],
    "*.{json,md,mdx,yml}": [
      "pnpm lint:format"
    ]
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  }
}
